{
  "compilerOptions": {
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
